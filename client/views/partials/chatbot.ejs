<!-- Chatbot Floating Window -->
<div id="chatbot-float">
  <div id="chatbot-header">
    <span>🧠 SmartBot</span>
    <span id="chatbot-close">×</span>
  </div>
  <div id="chatbot-messages">
    <div class="bot-message">
        👋 Hey there!  I'm your personal shopping assistant 🛍️<br> I'll help you find the perfect style match!
    </div>
    <div class="bot-message">
        📸 Upload a photo or ✍️ describe what you're looking for, and<br>
        I'll find the best options for you in a snap! ⚡✨
    </div>
  </div>
    <div id="chatbot-input-area">
        <button id="chatbot-image-btn">
            <span class="icon">📷</span>
            <span class="text">Upload Photo</span>
        </button>
        <input type="file" id="chatbot-image-upload" accept="image/*" />
        <textarea id="chatbot-input" placeholder="Type a message..."></textarea>
        <button id="chatbot-send">➤</button>
    </div>
    <div id="chatbot-actions">
        <button id="chatbot-recommend-btn">Show Recommendations</button>
        <button id="chatbot-clear-btn">Clear History</button>
    </div>
  <div id="chatbot-resize"></div>
</div>

<!-- Open Button -->
<button id="chatbot-open">💬</button>
