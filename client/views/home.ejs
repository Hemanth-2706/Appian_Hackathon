<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ShopSmarter - Home</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/chatbot.css">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@800&display=swap" rel="stylesheet">
  <style>
    .door-animation {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 9999;
      pointer-events: none;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: transparent;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    .door {
      position: absolute;
      width: 50%;
      height: 100%;
      background-color: transparent;
      background-image: url('/images/stor-background.jpg');
      background-size: cover;
      background-position: center;
      transition: transform 3s ease-in-out;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: inset 0 0 20px rgba(0,0,0,0.5);
    }

    .door-left {
      left: 0;
      transform: translateX(0);
      border-right: 2px solid #654321;
    }

    .door-right {
      right: 0;
      transform: translateX(0);
      border-left: 2px solid #654321;
    }

    .door-left.open {
      transform: translateX(-100%);
    }

    .door-right.open {
      transform: translateX(100%);
    }


    .split-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 4.5em;
      font-family: 'Playfair Display', serif;
      font-weight: 800;
      color: #ffffff;
      text-shadow: 
        2px 2px 0 #000,
        -2px -2px 0 #000,
        2px -2px 0 #000,
        -2px 2px 0 #000,
        0 4px 4px rgba(0,0,0,0.5);
      white-space: nowrap;
      opacity: 1;
      z-index: 1;
      letter-spacing: 2px;
      text-transform: uppercase;
      width: 100%;
      text-align: center;
    }

    .split-text-left {
      right: 0;
      left: 0;
      transform: translate(0, -50%);
    }

    .split-text-right {
      right: 0;
      left: 0;
      transform: translate(0, -50%);
    }

    .store-sign {
      position: absolute;
      top: 20%;
      left: 50%;
      transform: translateX(-50%);
      color: #fff;
      font-size: 2em;
      font-weight: bold;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
      opacity: 0;
      transition: opacity 0.5s ease-in-out;
    }

    .store-sign.visible {
      opacity: 1;
    }

    .door-content {
      color: #fff;
      font-size: 1.5em;
      text-align: center;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }

    .door-content.visible {
      opacity: 1;
    }

    /* Website content fade in */
    .sticky-container {
      opacity: 0;
      transition: opacity 3s ease-in-out;
    }

    .sticky-container.visible {
      opacity: 1;
    }

    .banner-carousel {
      opacity: 0;
      transition: opacity 3s ease-in-out;
    }

    .banner-carousel.visible {
      opacity: 1;
    }

    main {
      opacity: 0;
      transition: opacity 3s ease-in-out;
    }

    main.visible {
      opacity: 1;
    }
  </style>
</head>
<body>
  <!-- Door Animation -->
  <div class="door-animation">
    <div class="door door-left">
      <div class="door-handle"></div>
      <div class="split-text split-text-left">HSM Shop</div>
    </div>
    <div class="door door-right">
      <div class="door-handle"></div>
      <div class="split-text split-text-right">Smarter</div>
    </div>
  </div>

<div class="sticky-container">

  <!-- Header with Search on Left and Login/Cart on Right -->
  <header class="header">
    <div class="left-section">
      <a href="/" class="logo" style="text-decoration: none; color: inherit;">üõçÔ∏è HSM ShopSmarter</a>
      <div class="search-section">
        <input type="text" placeholder="Search for products..." id="searchInput">
        <button onclick="search()">Search</button>
        <button onclick="uploadImage()">üì∑ Search with Photo</button>
        <input type="file" id="imageInput" accept="image/*" style="display: none;" />
      </div>
    </div>
    <div class="right-section">
      <a href="/login" class="header-btn" style="text-decoration: none;">Login</a>
      <a href="/cart" class="header-btn cart-icon" style="text-decoration: none;">Cart üõí</a>
    </div>
  </header>

  <!-- Category Navbar -->
  <section class="category-navbar">
    <ul class="categories">
      <li class="category-item">
        Electronics
        <ul class="subcategory-dropdown">
          <li>Mobiles</li>
          <li>Laptops</li>
          <li>Wearables</li>
          <li>Audio</li>
          <li>Gaming</li>
        </ul>
      </li>
      <li class="category-item">
        Fashion
        <ul class="subcategory-dropdown">
          <li>Men</li>
          <li>Women</li>
          <li>Kids</li>
          <li>Footwear</li>
          <li>Accessories</li>
        </ul>
      </li>
      <li class="category-item">
        Home & Kitchen
        <ul class="subcategory-dropdown">
          <li>Furniture</li>
          <li>Appliances</li>
          <li>Cookware</li>
          <li>Decor</li>
          <li>Lighting</li>
        </ul>
      </li>
      <li class="category-item">
        Books & Media
        <ul class="subcategory-dropdown">
          <li>Books</li>
          <li>Magazines</li>
          <li>Stationery</li>
        </ul>
      </li>
      <li class="category-item">
        Sports & Outdoors
        <ul class="subcategory-dropdown">
          <li>Fitness</li>
          <li>Camping</li>
          <li>Outdoor Gear</li>
        </ul>
      </li>
      <li class="category-item">
        Healthcare
        <ul class="subcategory-dropdown">
          <li>Supplements</li>
          <li>Personal Care</li>
          <li>Medical Equipment</li>
          <li>Wellness Devices</li>
        </ul>
      </li>
      <li class="category-item">
        Car & Motorbike
        <ul class="subcategory-dropdown">
          <li>Car Accessories</li>
          <li>Bike Accessories</li>
          <li>Lubricants</li>
          <li>Spare Parts</li>
        </ul>
      </li>
    </ul>
  </section>


  <!-- Marquee Banner -->
  <section class="banner">
    <marquee behavior="scroll" direction="right">
      ‚ú® Discover Your Style ‚Ä¢ Personalized Recommendations ‚Ä¢ AI Shopping Assistant ‚ú®
    </marquee>
  </section>

</div>

  <!-- Sliding Banner Section -->
  <section class="banner-carousel">
    <div class="carousel-wrapper">
      <button class="nav left" onclick="prevSlide()">&#10094;</button>
      <div class="carousel-track" id="carouselTrack">
        <% bannerImages.forEach(img => { %>
          <div class="carousel-slide" style="background-image: url('/images/banner/<%= img %>');"></div>
        <% }) %>
      </div>
      <button class="nav right" onclick="nextSlide()">&#10095;</button>
    </div>
  </section>

  <!-- Featured Products -->
  <main>
    <h2 class="section-title">Featured Products</h2>
    <div class="product-list">
      <% products.forEach(product => { %>
        <div class="product-card-container">
          <div class="product-card">
              <img src="<%= product.image %>" alt="<%= product.productName %>" />
              <h3><%= product.productName %></h3>
              <p class="category"><%= product.articleType %> | <%= product.subCategory %></p>
              <p class="season">Season: <%= product.season %></p>
              <p class="usage">Usage: <%= product.usage %></p>
              <p class="price">‚Çπ<%= product.price %></p>

            <!-- Quantity Control -->
            <div class="quantity-control">
              <button class="quantity-btn decrease" data-product-id="<%= product.productId %>">‚àí</button>
              <span class="quantity-number" id="qty-<%= product.productId %>">1</span>
              <button class="quantity-btn increase" data-product-id="<%= product.productId %>">+</button>
            </div>

            <button class="add-to-cart-btn" data-product-id="<%= product.productId %>">Add to Cart</button>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

    <!-- Toast Notification -->
    <div id="toast" class="toast">Added to Cart</div>
    
    <%- include('partials/chatbot') %>
    <script src="/js/chatbot.js"></script>

  <script>
    // Door animation
    document.addEventListener('DOMContentLoaded', function() {
      const doorLeft = document.querySelector('.door-left');
      const doorRight = document.querySelector('.door-right');
      const stickyContainer = document.querySelector('.sticky-container');
      const bannerCarousel = document.querySelector('.banner-carousel');
      const mainContent = document.querySelector('main');

      // Start animation
      setTimeout(() => {
        doorLeft.classList.add('open');
        doorRight.classList.add('open');
        
        // Start revealing website content immediately
        stickyContainer.classList.add('visible');
        bannerCarousel.classList.add('visible');
        mainContent.classList.add('visible');
      }, 500);

      // Remove animation elements after animation completes
      setTimeout(() => {
        const doorAnimation = document.querySelector('.door-animation');
        doorAnimation.style.display = 'none';
      }, 3500);
    });
  </script>
  <script src="/js/script.js" defer></script>
</body>
</html>
