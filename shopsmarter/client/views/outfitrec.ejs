<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Outfit Recommendations - ShopSmarter</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    .outfit-list {
      max-width: 900px;
      margin: auto;
      padding: 2rem;
    }
    .outfit {
      border: 1px solid #ddd;
      border-radius: 8px;
      margin-bottom: 2rem;
      padding: 1rem;
    }
    .outfit h2 {
      margin-bottom: 0.5rem;
    }
    .items {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
    }
    .item {
      text-align: center;
      width: 120px;
    }
    .item img {
      max-width: 100%;
      border-radius: 6px;
    }
    .compatibility-score {
      font-weight: bold;
      color: #4caf50;
      font-size: 1.2rem;
    }
  </style>
</head>
<body>
  <header class="header">
    <div class="logo">üõçÔ∏è HSM ShopSmarter</div>
  </header>

  <h1 style="text-align:center; margin-top:1rem;">Outfit Recommendations</h1>

  <div class="outfit-list">
    <% outfits.forEach(function(outfit) { %>
      <div class="outfit">
        <h2><%= outfit.outfitName %></h2>
        <div class="items">
          <% outfit.items.forEach(function(item) { %>
            <div class="item">
              <img src="<%= item.image %>" alt="<%= item.name %>" />
              <p><%= item.name %></p>
            </div>
          <% }); %>
        </div>
        <p class="compatibility-score">Compatibility Score: <%= outfit.compatibilityScore %>%</p>
      </div>
    <% }); %>
  </div>
</body>
</html>
