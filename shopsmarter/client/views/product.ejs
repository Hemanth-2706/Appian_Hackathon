<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= product.name %> - ShopSmarter</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/product.css">
  <link rel="stylesheet" href="/css/recommend.css">
</head>
<body>

<div class="sticky-container">

  <!-- Header with Search on Left and Login/Cart on Right -->
  <header class="header">
    <div class="left-section">
      <a href="/" class="logo" style="text-decoration: none; color: inherit;">üõçÔ∏è HSM ShopSmarter</a>
      <div class="search-section">
        <input type="text" placeholder="Search for products..." id="searchInput">
        <button onclick="search()">Search</button>
        <button onclick="uploadImage()">üì∑ Search with Photo</button>
        <input type="file" id="imageInput" accept="image/*" style="display: none;" />
      </div>
    </div>
    <div class="right-section">
      <button class="header-btn">Login</button>
      <a href="/cart" class="header-btn cart-icon" style="text-decoration: none;">Cart üõí</a>
    </div>
  </header>

  <!-- Category Navbar -->
  <section class="category-navbar">
    <ul class="categories">
      <li class="category-item">
        Electronics
        <ul class="subcategory-dropdown">
          <li>Mobiles</li>
          <li>Laptops</li>
          <li>Wearables</li>
          <li>Audio</li>
          <li>Gaming</li>
        </ul>
      </li>
      <li class="category-item">
        Fashion
        <ul class="subcategory-dropdown">
          <li>Men</li>
          <li>Women</li>
          <li>Kids</li>
          <li>Footwear</li>
          <li>Accessories</li>
        </ul>
      </li>
      <li class="category-item">
        Home & Kitchen
        <ul class="subcategory-dropdown">
          <li>Furniture</li>
          <li>Appliances</li>
          <li>Cookware</li>
          <li>Decor</li>
          <li>Lighting</li>
        </ul>
      </li>
      <li class="category-item">
        Books & Media
        <ul class="subcategory-dropdown">
          <li>Books</li>
          <li>Magazines</li>
          <li>Stationery</li>
        </ul>
      </li>
      <li class="category-item">
        Sports & Outdoors
        <ul class="subcategory-dropdown">
          <li>Fitness</li>
          <li>Camping</li>
          <li>Outdoor Gear</li>
        </ul>
      </li>
      <li class="category-item">
        Healthcare
        <ul class="subcategory-dropdown">
          <li>Supplements</li>
          <li>Personal Care</li>
          <li>Medical Equipment</li>
          <li>Wellness Devices</li>
        </ul>
      </li>
      <li class="category-item">
        Car & Motorbike
        <ul class="subcategory-dropdown">
          <li>Car Accessories</li>
          <li>Bike Accessories</li>
          <li>Lubricants</li>
          <li>Spare Parts</li>
        </ul>
      </li>
    </ul>
  </section>


  <!-- Marquee Banner -->
  <section class="banner">
    <marquee behavior="scroll" direction="right">
      ‚ú® Discover Your Style ‚Ä¢ Personalized Recommendations ‚Ä¢ AI Shopping Assistant ‚ú®
    </marquee>
  </section>

</div>

  <main class="product-page">
    <div class="product-detail-card">
      <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image"/>
      <div class="product-info">
        <h1><%= product.name %></h1>
        <p class="category"><strong>Category:</strong> <%= product.category %></p>
        <p class="price"><strong>Price:</strong> $<%= product.price %></p>
        <p class="description"><strong>Details:</strong> <%= product.description %></p>
        
        <div class="add-to-cart-section">
          <div class="quantity-selector">
            <label for="quantity">Quantity:</label>
            <select id="quantity" class="quantity-dropdown">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
          <button class="btn btn-primary add-to-cart" data-product-id="<%= product.productId %>">
            Add to Cart
          </button>
        </div>
      </div>
    </div>

    <!-- Similar Products Section -->
    <section class="products-section similar-section">
      <h2 class="text-center mb-4">Similar Products</h2>
      <div class="recommend-container">
        <div id="similar-products-grid" class="products-grid">
          <% if (similarProducts && similarProducts.length > 0) { %>
            <% similarProducts.forEach(product => { %>
              <div class="product-card">
                <a href="/product/<%= product.productId %>" class="product-link">
                  <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                  <div class="product-details">
                    <h3><%= product.name %></h3>
                    <p class="description"><%= product.description %></p>
                    <p class="price">$<%= product.price %></p>
                  </div>
                </a>
                <div class="buttons">
                  <div class="quantity-selector">
                    <label for="quantity-<%= product.productId %>">Qty:</label>
                    <select id="quantity-<%= product.productId %>" class="quantity-dropdown">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>
                  </div>
                  <button class="btn btn-primary add-to-cart" data-product-id="<%= product.productId %>">
                    Add to Cart
                  </button>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="no-recommend">
              <p class="text-center">No similar products available at the moment.</p>
            </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Products We Recommend -->
    <section class="products-section recommend-section">
      <h2 class="text-center mb-4">Products We Recommend</h2>
      <div class="recommend-container">
        <div id="recommend-products-grid" class="products-grid">
          <% if (recommendProducts && recommendProducts.length > 0) { %>
            <% recommendProducts.forEach(product => { %>
              <div class="product-card">
                <a href="/product/<%= product.productId %>" class="product-link">
                  <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                  <div class="product-details">
                    <h3><%= product.name %></h3>
                    <p class="description"><%= product.description %></p>
                    <p class="price">$<%= product.price %></p>
                  </div>
                </a>
                <div class="buttons">
                  <div class="quantity-selector">
                    <label for="quantity-<%= product.productId %>">Qty:</label>
                    <select id="quantity-<%= product.productId %>" class="quantity-dropdown">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>
                  </div>
                  <button class="btn btn-primary add-to-cart" data-product-id="<%= product.productId %>">
                    Add to Cart
                  </button>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="no-recommend">
              <p class="text-center">No products to recommend at the moment.</p>
            </div>
          <% } %>
        </div>
      </div>
    </section>
  </main>

  <script src="/js/recommend.js"></script>
  <script src="/js/product.js"></script>
</body>
</html>
